}

/* Container for sections */
.adminCont {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 20px;
}

/* Section Styling (Users, Files, Messages, Functions) */
.korsnici, .failes, .poruke, .funkcije {
  background-color: #fff;
  padding: 20px;
  border-radius: 8px;
  border: 1px solid #ddd;
  transition: box-shadow 0.3s ease;
}

.korsnici:hover, .failes:hover, .poruke:hover, .funkcije:hover {
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
}

.korsnici h3, .failes h3, .poruke h3, .funkcije h3 {
  color: #2c3e50;
  margin-bottom: 15px;
  font-size: 1.5rem;
}

/* Search Input */
#Input {
  width: 100%;
  padding: 10px;
  margin-bottom: 15px;
  border: 1px solid #ccc;
  border-radius: 5px;
  font-size: 1rem;
  outline: none;
  transition: border-color 0.3s ease;
}

#Input:focus {
  border-color: #3498db;
  box-shadow: 0 0 5px rgba(52, 152, 219, 0.3);
}

/* Tables */
#userTable, #fileTable {
  width: 100%;
  border-collapse: collapse;
  margin-bottom: 15px;
}

#userTable th, #fileTable th {
  background-color: #3498db;
  color: #fff;
  padding: 12px;
  text-align: left;
  font-weight: bold;
}

#userTable td, #fileTable td {
  padding: 10px;
  border-bottom: 1px solid #ddd;
  color: #333;
}

#userTable tr:nth-child(even), #fileTable tr:nth-child(even) {
  background-color: #f5f5f5;
}

#userTable tr:hover, #fileTable tr:hover {
  background-color: #e0f7fa;
}

/* File Links */
#fileTable a {
  color: #2980b9;
  text-decoration: none;
  transition: color 0.3s ease;
}

#fileTable a:hover {
  color: #1abc9c;
  text-decoration: underline;
}

/* Form Styling */
.poruke form {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.poruke label {
  font-weight: bold;
  color: #333;
}

.poruke select, .poruke textarea {
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  font-size: 1rem;
  outline: none;
  transition: border-color 0.3s ease;
}

.poruke select:focus, .poruke textarea:focus {
  border-color: #3498db;
  box-shadow: 0 0 5px rgba(52, 152, 219, 0.3);
}

.poruke textarea {
  resize: vertical;
  min-height: 100px;
}

.poruke button {
  background-color: #3498db;
  color: #fff;
  padding: 10px 20px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  font-size: 1rem;
  transition: background-color 0.3s ease;
}

.poruke button:hover {
  background-color: #2980b9;
}

/* Functions Links */
.funkcije a {
  display: block;
  margin: 10px 0;
  padding: 10px;
  background-color: #ecf0f1;
  color: #2c3e50;
  text-decoration: none;
  border-radius: 5px;
  text-align: center;
  transition: background-color 0.3s ease, color 0.3s ease;
}

.funkcije a:hover {
  background-color: #3498db;
  color: #fff;
}

