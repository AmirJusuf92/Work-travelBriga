<h2>Super Admin Dashboard</h2>
<table>
  <tr>
    <th>Name</th><th>Email</th><th>Role</th><th>Actions</th>
  </tr>
  <% users.forEach(user => { %>
    <tr>
      <td><%= user.first_name %> <%= user.last_name %></td>
      <td><%= user.email %></td>
      <td><%= user.role %></td>
      <td>
        <% if (user.role === 'user') { %>
          <form action="/super-admin/promote/<%= user.id %>" method="POST" style="display:inline;">
            <button type="submit">Promote to Admin</button>
          </form>
        <% } else if (user.role === 'admin') { %>
          <form action="/super-admin/demote/<%= user.id %>" method="POST" style="display:inline;">
            <button type="submit">Demote to User</button>
          </form>
        <% } %>
      </td>
    </tr>
  <% }); %>
</table>
